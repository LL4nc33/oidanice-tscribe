{
  "name": "@oidanice/kindle-ui",
  "version": "0.1.0",
  "description": "Kindle-inspired monochrome design system for Tailwind CSS",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "preset.js",
    "kindle.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./preset": "./preset.js",
    "./css": "./kindle.css"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external react --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.0.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "tailwindcss": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "tailwindcss",
    "design-system",
    "kindle",
    "monochrome",
    "e-reader",
    "react",
    "ui-components"
  ],
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/LL4nc33/oidanice-tscribe",
    "directory": "packages/kindle-ui"
  }
}
